#include "resource.h"
#include <windows.h>

// Seko Screenshot Settings - Compact & Elegant
IDD_SETTINGS DIALOGEX 0, 0, 180, 220
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU | DS_CENTER
CAPTION "Seko Settings"
FONT 8, "Segoe UI"
BEGIN
    // Fullscreen hotkey
    LTEXT "Fullscreen Hotkey", IDC_STATIC, 10, 15, 160, 8
    EDITTEXT IDC_HOTKEY_DISPLAY, 10, 25, 160, 18, ES_READONLY | WS_BORDER
    LTEXT "Click and press any key...", IDC_STATIC, 10, 46, 160, 8
    
    // Region hotkey
    LTEXT "Region Hotkey", IDC_STATIC, 10, 62, 160, 8
    EDITTEXT IDC_HOTKEY_REGION_DISPLAY, 10, 72, 160, 18, ES_READONLY | WS_BORDER
    LTEXT "Click and press any key...", IDC_STATIC, 10, 93, 160, 8
    
    // Auto-start
    CONTROL "Start with Windows", IDC_AUTOSTART, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 10, 108, 160, 12
    
    // API Key section
    LTEXT "Nekoo API Key", IDC_STATIC, 10, 128, 160, 8
    EDITTEXT IDC_API_KEY_EDIT, 10, 138, 160, 18, WS_BORDER
    PUSHBUTTON "Validate", IDC_API_KEY_VALIDATE, 10, 160, 50, 18
    LTEXT "", IDC_API_KEY_STATUS, 65, 160, 105, 20
    
    // Buttons
    DEFPUSHBUTTON "Save", IDOK, 50, 195, 55, 20
    PUSHBUTTON "Cancel", IDCANCEL, 115, 195, 55, 20
END

// Application icon
IDI_APPICON ICON "../icon.ico"

